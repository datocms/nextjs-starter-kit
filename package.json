{
  "name": "nextjs-starter-kit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint && prettier --check .",
    "generate-schema": "dotenv -c -- bash -c 'gql.tada generate schema https://graphql.datocms.com --header \"X-Exclude-Invalid: true\" --header \"Authorization: $DATOCMS_PUBLISHED_CONTENT_CDA_TOKEN\"'",
    "format": "npx prettier . --write",
    "prepare": "npx simple-git-hooks && npm run generate-schema"
  },
  "dependencies": {
    "@datocms/cda-client": "^0.2.7",
    "@datocms/cma-client": "^5.2.0",
    "@types/highlight.js": "^10.1.0",
    "datocms-structured-text-to-plain-text": "^5.1.6",
    "datocms-structured-text-utils": "^5.1.6",
    "gql.tada": "^1.9.0",
    "highlight.js": "^11.11.1",
    "jsdom": "^27.2.0",
    "next": "^16",
    "react": "^19",
    "react-datocms": "^7.2.3",
    "react-dom": "^19",
    "serialize-error": "^12.0.0"
  },
  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv-cli": "^11.0.0",
    "prettier": "3.7.4",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run format"
  }
}
